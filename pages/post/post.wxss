/* post.wxss */
page{
  background-color: #efefef;
}

swiper{
  width:750rpx;
  height:500rpx;
}

swiper image{
  width:750rpx;
  height:500rpx
}

.news{
  display: flex;
  flex-direction:column; 
  margin-top:20rpx;
  margin-bottom: 40rpx;
  background-color: #fff; 
  border-bottom:1px solid #eee;
  border-top: 1px solid #eee;
  padding-bottom: 5px; 
}
.news image{
  margin-left: 16px;
  width: 100%;
  height: 300rpx;
  margin: auto 0;
  margin-bottom: 15px;
}

.author{
  margin:10rpx 0 5rpx 10rpx;
}
.author image{
  width: 60rpx;
  height: 60rpx;
  vertical-align: middle;
}
.author text{
  margin-left: 20rpx;
  vertical-align: middle;
  margin-bottom: 10px;
  font-size: 26rpx;
  color: #777;
}

.title{
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 10px;
  margin-left: 10px;
}

.content{
  color: #666;
  font-size: 26rpx;
  margin-bottom: 20rpx;
  margin-left: 20rpx;
  letter-spacing: 2rpx;
  line-height: 40rpx;
}

.social{
  font-size: 13px;
  flex-direction: row;
  line-height: 16px;
  margin-left: 10px;
}

.social image{
  height: 16px;
  width: 16px;
  margin-right: 8px;
  vertical-align: middle;
}

.social text{
  vertical-align: middle;
  margin-right: 20px;
}
